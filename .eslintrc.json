{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-native"
    ],
    "rules": {
        "arrow-parens": [
        "error",
        "always"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "complexity": [
            "error",
            11
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "no-console": [
            "error",
             {
                 "allow": [
                    "warn",
                    "error"
                ]
             }

        ],
        "no-unused-vars" : [
            0
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "react-native/no-inline-styles" : [
            "error"
        ]
    }
}





